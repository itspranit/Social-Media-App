<h1>Codial / <%= title %></h1>
<section id="feed-posts">
    <h4>Posts</h4>
    <% if (locals.user) {%>
    <form action="" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="type here.." required></textarea>
        <input type="submit" name="post">
    </form>
    <% } %>
    <div id="posts-list-container">
        <ul>
            <% for(post of posts) { %>
              <%- include('_postd') -%>
            <% } %>
        </ul>
    </div>
    
</section>